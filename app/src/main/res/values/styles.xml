<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="barraSuperior">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/barra_superior_fondo_repeat</item>
    </style>

    <style name="toolsEditor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/barra_superior_fondo_repeat</item>
    </style>

    <style name="fondoPantalla">
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="input_editor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="rv_note_item">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="rv_note_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/darkBrown</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- dialogs -->
    <style name="dialog_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shape_item</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:maxHeight">600dp</item>
    </style>

    <style name="dialog_message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">40</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="dialog_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="dialog_text_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_edit_none">
        <item name="android:inputType">none</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@drawable/shape_item_input_dialog</item>
    </style>

</resources>