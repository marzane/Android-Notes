<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="barraSuperior">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/barra_superior_fondo_repeat</item>
    </style>

    <style name="fondoPantalla">
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="pagina">
        <item name="android:background">@drawable/rayas_repeat</item>
    </style>

    <style name="input_editor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/darkBrown</item>
    </style>

    <style name="rv_note_item">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="rv_note_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/darkBrown</item>
    </style>


</resources>