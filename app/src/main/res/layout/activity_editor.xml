<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditorActivity"
    android:orientation="vertical"
    style="@style/fondoPantalla">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_editor"
        style="@style/barraSuperior"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

<!-- https://www.develou.com/scrollview-en-android/ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            style="@style/input_editor"
            android:text=""
            android:focusedByDefault="true"
            android:id="@+id/et_editor"
            />
    </ScrollView>

</LinearLayout>