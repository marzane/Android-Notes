<?xml version="1.0" encoding="utf-8"?>
<com.marzane.bloc_de_notas.GridViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingRight="35dp"
    android:paddingLeft="30dp"
    android:background="@drawable/post_it"
    android:orientation="vertical"
    android:minWidth="200dp"
    android:minHeight="200dp">

    <TextView
        style="@style/rv_note_value"
        android:id="@+id/rv_note_title"
        android:text="titulo"
        android:textSize="15dp"
        android:layout_weight="90"
        android:rotation="-6" />

    <TextView
        style="@style/rv_note_value"
        android:id="@+id/rv_note_date"
        android:text="12-10-2024"
        android:textAlignment="textEnd"
        android:textStyle="italic"
        android:textSize="12dp"
        android:layout_weight="10"
        android:rotation="-6"/>

</com.marzane.bloc_de_notas.GridViewItem>